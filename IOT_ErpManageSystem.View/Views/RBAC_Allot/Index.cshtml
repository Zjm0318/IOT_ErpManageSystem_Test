
@{
    ViewData["Title"] = "Index";
}




<div class="layui-card">
    <div class="layui-card-header">
        <h1>权限分配</h1>
    </div>
    <div class="layui-card-body">
        <blockquote class="layui-elem-quote role_search" style="height:50px">

            <div class="layui-inline">
                <div class="layui-input-inline">
                    <input id="Accot_Quan" type="text" placeholder="请输入权限组名称" style="width:250px;height:25px;margin-bottom:30px">

                </div>
            </div>
            <div class="layui-inline">
                <a class="layui-btn search_btn" onclick="searchData();"><i class="layui-icon layui-icon-search"></i>搜索</a>
                <button type="button" class="layui-btn layui-btn-normal" onclick="AddAllot()">添加</button>
            </div>

        </blockquote>
    </div>
</div>
<div style="padding:10px;background-color: #F2F2F2">
    <table class="layui-table" style="text-align:center">
        <tr>
            <td>选择</td>
            <td>权限组编号</td>
            <td>权限组名称</td>
            <td>权限等级</td>
            <td>包含权限</td>
            <td>操作</td>
        </tr>
        <tbody id="tb">
        </tbody>
    </table>
</div>
<div style="float:right;margin-right:100px">
    <button type="button" class="layui-btn layui-btn-sm" onclick="First()">首页</button>
    <button type="button" class="layui-btn layui-btn-sm" onclick="Pre()">上一页</button>
    <button type="button" class="layui-btn layui-btn-sm" onclick="Next()">下一页</button>
    <button type="button" class="layui-btn layui-btn-sm" onclick="Last()">尾页</button>
</div>
<script>
    var PageIndex = 1;
    var PageSize = 5;
    var Count = 0;

    $(function () {

        show(PageIndex);
    })

    //显示权限数据
    function show(PageIndex) {
        var obj = {
            "PageIndex": PageIndex,
            "PageSize": PageSize,
            "Dep_Name": $("#Accot_Quan").val(),
        };
        $.ajax({
            url: "http://localhost:52645/api/RBAC_Allot/GetAllot",
            type: "post",
            data: obj,
            accepts: "application/x-www-form-urlencoded",
            contentType: "application/x-www-form-urlencoded",
        }).done(function (data) {
            Count = data.count;
            $("#tb").empty();
            $.each(data.alist, function (index, item) {
                var str = '<tr>' +
                    '<td><input type="checkbox"/></td>' +
                    '<td>' + item.allot_Code + '</td>' +
                    '<td>' + item.dep_Name + '</td>' +
                    '<td>' + item.allot_Grade + '</td>' +
                    '<td>' + item.allot_BaoId + '</td>' +
                    '<td><button type="button" class="layui-btn layui-btn-warm layui-btn-sm" onclick="RoleUpdate(\'' + item.id + '\')" >编辑</button></td>' + '</tr>';
                $("#tb").append(str);
            })
        })
    }

    //查询部门
    function searchData() {
        PageIndex = 1;
        show(PageIndex);
    }
    //首页
    function First() {
        PageIndex = 1;
        show(PageIndex);
    }

    //上一页
    function Pre() {
        if (PageIndex <= 1) {
            PageIndex = 1;
        }
        else {
            PageIndex = PageIndex - 1;

        }
        show(PageIndex);
    }


    //下一页
    function Next() {
        if (PageIndex >= Count) {
            PageIndex = Count;
        }
        else {
            PageIndex = PageIndex + 1;

        }
        show(PageIndex);
    }

    //尾页
    function Last() {
        PageIndex = Count;
        show(PageIndex);
    }

    //编辑跳转
    function RoleUpdate(Id) {
        window.location.href = "/RBAC_Allot/Edit?Id=" + Id;
    }

    function AddAllot() {
        window.location.href = "/RBAC_Allot/Add";
    }
</script>