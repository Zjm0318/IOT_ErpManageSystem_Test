
@{
    ViewData["Title"] = "Personage";
}


<style>
    .box {
        width:1400px;
        height:608px;
        border:1px solid;
        border-color:lightgrey;
    }
    #text {
        background-color: lightgrey;
        border:0;
        padding-top:15px;
        padding-left:682px;
    }
    #qued {
        margin-top: 26px;
        margin-left: 50px;
        width: 120px;
        height: 40px;
        background-color: #17978b;
        color: white;
    }
    .t{
        margin-top:50px;
        margin-left:500px;
    }
    .tx{
        margin-left:176px;
    }
    #userName{
        padding-left:10px;
    }
    #iphone {
        padding-left: 10px;
    }
</style>
<div class="box">
     <div style="width:1400px; height:51px;background-color:lightgray">
         <input id="text" type="text" value="账户设置" />
     </div>
     <div class="t">
         <div class="tx">
             <img id="p" src="" style="width:100px;height:100px;border-radius:50%" /><br />
         </div>
         <table>
             <tr>
                 <td><span style="color:red">*</span>用户名：</td>
                 <td><input type="text" id="userName" style="background-color:lightgray;width:300px;height:38px" /><a style="color:red" id="username">修改</a></td>
             </tr>
             <tr style="padding-top:15px">
                 <td><span style="color:red">*</span>手机号：</td>
                 <td><input type="text" id="iphone" style="background-color:lightgray;width:300px;height:38px" /><a style="color:red" id="ip">修改</a></td>
             </tr>
             <tr>
                 <td><span style="color:red">*</span>旧密码：</td>
                 <td><input type="password" id="oldPwd" style="width:300px;height:38px" /></td>
             </tr>
             <tr>
                 <td><span style="color:red">*</span>新密码：</td>
                 <td><input type="password" id="newPwd" style="width:300px;height:38px" /></td>
             </tr>
             <tr>
                 <td><span style="color:red">*</span>确认密码：</td>
                 <td><input type="password" id="quePwd" style="width:300px;height:38px" /></td>
             </tr>
             <tr>
                 <td></td>
                 <td><input type="button" id="qued" value="确定" /></td>
             </tr>
         </table>
     </div>
</div>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script>
    var pwd = "";
    var uid = "";

    $(function () {
        ShowPer();
    })
    function ShowPer() {
        var token = localStorage["token"];
        $.ajax({
            url: "http://localhost:52645/api/Default/ShowPer?token=" + token,
            type: "get",
        }).done(function (d) {
            uid = d.uid;
            console.log(d);
            $("#p").attr("src",d.photo);
            $("#userName").val(d.userName);
            $("#iphone").val(d.iPhone);
            pwd = d.pwd;
        });
    }
    $("#username").click(function () {
        if (confirm("直接在文本框编辑即可，是否修改？")) {
            if (jQuery('#userName').val() == "") {
                jQuery('#userName').focus();
                alert("用户名不能为空");
                return;
            }
            //正则表达式
            var reg = /(^[a-z]+$)/;
            if (!reg.test(jQuery('#userName').val())) {
                jQuery('#userName').focus();
                alert("请输入正确格式的用户名！");
                return;
            }
            var opj = {
                UID: uid,
                UserName: $("#userName").val()
            };
            $.ajax({
                url: "http://localhost:52645/api/Default/UpName",
                type: "post",
                accepts: "application/x-www-form-urlencoded",
                contentType: "application/x-www-form-urlencoded",
                data: opj,
            }).done(function (d) {
                if (d > 0) {
                    alert("修改成功！");
                    location.reload();
                }
                else {
                    alert("修改失败！");
                }
            });
        }

    });
    $("#ip").click(function () {
        if (confirm("直接在文本框编辑即可，是否修改？")) {
            if (jQuery('#iphone').val() == "") {
                jQuery('#iphone').focus();
                alert("手机不能为空");
                return;
            }
            //正则表达式
            var reg = /(1[3-9]\d{9}$)/;
            if (!reg.test(jQuery('#iphone').val())) {
                jQuery('#iphone').focus();
                alert("请输入正确格式的手机号码！");
                return;
            }
            var opj = {
                UID: uid,
                IPhone: $("#iphone").val(),
            };
            $.ajax({
                url: "http://localhost:52645/api/Default/UpPhone",
                type: "post",
                accepts: "application/x-www-form-urlencoded",
                contentType: "application/x-www-form-urlencoded",
                data: opj,
            }).done(function (d) {
                if (d > 0) {
                    alert("修改成功！");
                    location.reload();
                }
                else {
                    alert("修改失败！");
                }
            });
        }

    });
    $("#qued").click(function () {

        if ($("#oldPwd").val() != pwd) {
            alert("您输入的旧密码有误，请重新输入！");
            return;
        }
        if ($("#newPwd").val() != $("#quePwd").val()) {
            alert("两次密码不一致，请您重新输入！");
            return;
        }
        if (jQuery('#newPwd').val() == "") {
            jQuery('#newPwd').focus();
            alert("新密码不能为空");
            return;
        }
        //正则表达式
        var reg = /(^\d{6}$)/;
        if (!reg.test(jQuery('#newPwd').val())) {
            jQuery('#newPwd').focus();
            alert("请输入6位数字密码！");
            return;
        }
        var opj = {
            UID: uid,
            Pwd: $("#newPwd").val()
        };
        //var token = localStorage["token"];
        $.ajax({
            url: "http://localhost:52645/api/Default/Update",
            type: "post",
            accepts: "application/x-www-form-urlencoded",
            contentType: "application/x-www-form-urlencoded",
            data: opj,
        }).done(function (d) {
            if (d > 0) {
                alert("修改成功！");
                location.reload();
            }
            else {
                alert("修改失败！");
            }
        });
    });
</script>
