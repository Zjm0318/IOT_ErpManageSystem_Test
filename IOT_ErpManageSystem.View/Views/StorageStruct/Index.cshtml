<table class="layui-table" style="width:1340px;text-align:center;margin-left:70px">
    <tr>
        <td>仓库编号</td>
        <td>仓库名称</td>
        <td>仓库位置</td>
        <td>仓管员</td>
        <td>区域数量</td>
        <td>货架数量</td>
        <td>库位数量</td>
    </tr>
    <tbody id="tb">
    </tbody>
</table>
<div style="margin-top:30px">
    <div class="page" style="width:300px;margin-left:500px;float:right">
        <a href="#" style="margin-right:25px" onclick="First()">首页</a>
        <a href="#" style="margin-right:25px" onclick="Pre()">上一页</a>
        <a href="#" style="margin-right:25px" onclick="Next()">下一页</a>
        <a href="#" style="margin-right:25px" onclick="Last()">尾页</a>
    </div>
</div>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script>
    var pageIndex = 1;
    var pageSize = 3;
    var pageCount = 0;
    $(function () {
        Show();
    })

    function Show() {
        var time = "13526552356";
        var reg = new RegExp("");
        $.ajax({
            url: "http://localhost:52645/api/StorageStructure/GetStorageList?pageIndex=" + pageIndex + "&pageSize=" + pageSize,
            type: "get",
        }).done(function (data) {
            $("#tb").empty();
            $.each(data.list, function (index, item) {
                var tr = "<tr>" +
                    "<td>" + item.rid + "</td>" +
                    "<td>" + item.storageName + "</td>" +
                    "<td>" + item.storageLocation + "</td>" +
                    "<td>" + item.storageMan + "</td>" +
                    "<td>" + item.areaNum + "</td>" +
                    "<td>" + item.shelfNum + "</td>" +
                    "<td>" + item.seatNum + "</td>" +
                    "</tr>";
                $("#tb").append(tr);
            })
            pageCount = data.rowCount;
            pageCount = Math.ceil(pageCount / pageSize);
        });
    }
    //首页
    function First() {
        pageIndex = 1;
        Show();
    }
    //上一页
    function Pre() {
        if (pageIndex == 1) {
            alert("已经是第一页了");
            return;
        }
        pageIndex = pageIndex - 1;
        Show();
    }
    //下一页
    function Next() {
        if (pageIndex == pageCount) {
            alert("已经是最后一页了");
            return;
        }
        pageIndex = pageIndex + 1;
        Show();
    }
    //尾页
    function Last() {
        pageIndex = pageCount;
        Show();
    }
    //新增区域页面布局
    function list() {
        var list = "<div style='width: 300px; height: 200px; margin: 0 auto; padding - top: 20px'>" +
            "<div class='layui-inline'>" +
            "<label class='layui-form-label'>区域名称</label>" +
            "<div class='layui-input-inline'>" +
            "<input type='text' class='layui-input' id = 'area' placeholder = '请输入新增区域名称' > " +
            "</div>" +
            "</div>" +
            "<div class='layui-inline' style='float:left'>" +
            " <label class='layui-form-label'>所属仓库</label>" +
            " <div class='layui-col-md6'>" +
            "<select id='storage' name ='city' lay-verify=''>" +
            "<option value='0'>--仓库--</option>" +
            "</select>" +
            " </div>" +
            "</div>" +
            "<div class='layui-inline'>" +
            "  <button style='margin-left:120px;margin-top:30px' class='layui-btn layuiadmin-btn-list' id='save'>保存</button>" +
            " </div>" +
            " </div >";
        return list;
    }
    //新增区域
    function addArea() {
        layui.use('layer', function () {
            var layer = layui.layer;

            layer.open({
                title: '新增区域',
                area: ['800px', '500px']
                , content: list()
            });
            BindStorage();
            $("#save").click(function () {
                var area = $("#area").val();
                var storageId = $("#storage").val();
                if (area == "") {
                    alert("区域名称不能为空!");
                    return;
                }
                var reg = /^[^\s]*$/;
                if (!reg.test(area)) {
                    alert("区域名称不能输入空格！");
                    return;
                }
                if (storageId == "0") {
                    alert("请选择所属仓库!");
                    return;
                }
                var obj = {
                    "Area": area,
                    "StorageId": storageId
                }
                $.ajax({
                    url: "http://localhost:52645/api/StorageStructure/AddArea",
                    type: "post",
                    accepts: "application/x-www-from-urlencoded",
                    data: obj
                }).done(function (data) {
                    if (data > 0) {
                        alert("添加成功!");
                        window.location = "/StorageStruct/Index";
                    }
                    else {
                        alert("添加失败");
                    }
                })
            })
        })
    }

    //绑定仓库
    function BindStorage() {
        $.ajax({
            url: "http://localhost:52645/api/StorageStructure/GetStorList",
            type: "get",
        }).done(function (data) {
            $.each(data, function (index, item) {
                var option = "<option value='" + item.id + "'>" + item.storageName + "</option>";
                $("#storage").append(option);
            })
        })
    }
    //绑定区域
    function BindArea() {
        $.ajax({
            url: "http://localhost:52645/api/StorageStructure/GetAreaList",
            type: "get",
        }).done(function (data) {
            $.each(data, function (index, item) {
                var option = "<option value='" + item.id + "'>" + item.area + "</option>";
                $("#area").append(option);
            })
        })
    }

    //新增货架布局
    function shelf() {
        var list = "<div style='width: 300px; height: 200px; margin: 0 auto; padding - top: 20px'>" +
            "<div class='layui-inline'>" +
            "<label class='layui-form-label'>货架名称</label>" +
            "<div class='layui-input-inline'>" +
            "<input type='text' class='layui-input' id='shelf' placeholder='请输入新增货架名称'>" +
            "</div>" +
            "</div>" +
            "<div class='layui-inline' style='float:left'>" +
            "<label class='layui-form-label'>所属仓库</label>" +
            "<div class='layui-col-md6'>" +
            "<select id='storage' name='city' lay-verify=''>" +
            "<option value='0'>--仓库--</option>" +
            "</select>" +
            "</div>" +
            "</div>" +
            "<div class='layui-inline' style='float:left'>" +
            "<label class='layui-form-label'>所属区域</label>" +
            "<div class='layui-col-md6'>" +
            "<select id='area' lay-verify=''>" +
            "<option value='0'>--区域--</option>" +
            "</select>" +
            "</div>" +
            "</div>" +
            "<div class='layui-inline'>" +
            "<button style='margin-left:120px;margin-top:30px' class='layui-btn layuiadmin-btn-list'id='addShelf' >保存</button>" +
            "</div>" +
            "</div >";
        return list;
    }

    //新增货架
    function addShelf() {
        layui.use('layer', function () {
            var layer = layui.layer;

            layer.open({
                title: '新增huojia ',
                area: ['800px', '500px']
                , content: shelf()
            });
            BindStorage();
            BindArea();
            $("#addShelf").click(function () {
                var shelf = $("#shelf").val();
                var storage = $("#storage").val();
                var area = $("#area").val();
                if (shelf == "" || shelf == null) {
                    alert("请输入货架名称!");
                    return;
                }
                var reg = /^[^\s]*$/;
                if (!reg.test(shelf)) {
                    alert("货架名称不能输入空格！");
                    return;
                }
                if (storage == "0") {
                    alert("请选择所属仓库!");
                    return;
                }
                if (area == "0") {
                    alert("请选择所属区域!");
                    return;
                }
                var obj = {
                    "ShelfName": shelf,
                    "StorageId": storage,
                    "AreaId": area
                };
                $.ajax({
                    url: "http://localhost:52645/api/StorageStructure/AddShelf",
                    type: "post",
                    accepts: "application/x-www-from-urlencoded",
                    data: obj
                }).done(function (data) {
                    if (data > 0) {
                        alert("添加成功!");
                        window.location = "/StorageStruct/Index";
                    }
                    else {
                        alert("添加失败!");
                    }
                })
            })
        })
    }
</script>

