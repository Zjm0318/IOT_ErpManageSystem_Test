
@{
    ViewData["Title"] = "Index";
}
<style>
    .open {
        background: #f88408;
        width: 60px;
        height: 30px;
        text-align: center;
        line-height: 30px
    }
</style>
<div class="layui-fluid" style="margin-top:20px;width:1300px;height:140px;border:solid 1px;border-color:darkgrey;padding-top:30px">
    <div class="layui-inline">
        <label class="layui-form-label">配送方式</label>
        <div class="layui-col-md6">
            <select id="disPath" name="city" lay-verify="">
                <option value="">--配送方式--</option>
            </select>
        </div>
    </div>
    <div class="layui-inline">
        <label class="layui-form-label">出库日期</label>
        <div class="layui-input-inline">
            <input type="text" class="layui-input" id="time" placeholder="yyyy-MM-dd">
        </div>
    </div>
    <div class="layui-inline">
        <label class="layui-form-label">出货仓库</label>
        <div class="layui-col-md6">
            <select id="oStorage" name="city" lay-verify="">
                <option value="">--出货仓库--</option>
            </select>
        </div>
    </div>
    <div class="layui-inline">
        <label class="layui-form-label">订单编号</label>
        <div class="layui-input-inline">
            <input type="text" name="id" id="order" placeholder="请输入" autocomplete="off" class="layui-input">
        </div>
    </div>
    <div style="padding-bottom: 10px;">
        <button style="margin-left:40px;margin-top:30px" class="layui-btn layuiadmin-btn-list" onclick="Look()">搜索</button>
        <button style="margin-left:40px;margin-top:30px" class="layui-btn layuiadmin-btn-list" onclick="window.location='/OutStorage/AddOutStorage'">添加</button>
    </div>
</div>
<div>
    <table class="layui-table" style="width:1340px;text-align:center;margin-left:75px">
        <tr>
            <td>
                <input type="checkbox" id="ckALL" />
            </td>
            <td>出库日期</td>
            <td>订单编号</td>
            <td>配送方式</td>
            <td>收货人</td>
            <td>收货人联系方式</td>
            <td>配送区域</td>
            <td>出货仓库</td>
            <td>仓管员</td>
            <td>打包员</td>
            <td>操作</td>
        </tr>
        <tbody id="tb">
        </tbody>
    </table>
    <div style="margin-top:30px">
        <div class="page" style="width:300px;margin-left:500px;float:right">
            <a href="#" style="margin-right:25px" onclick="First()">首页</a>
            <a href="#" style="margin-right:25px" onclick="Pre()">上一页</a>
            <a href="#" style="margin-right:25px" onclick="Next()">下一页</a>
            <a href="#" style="margin-right:25px" onclick="Last()">尾页</a>
        </div>
    </div>
</div>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script>
    var pageIndex = 1;
    var pageSize = 2;
    var pageCount = 0;
    $(function () {
        GetDisList();
        GetStorageList();
        Show();
    })
    //绑定配送方式
    function GetDisList() {
        $.ajax({
            url: "http://localhost:52645/api/OStorageManage/GetTbDisList",
            type: "get",
        }).done(function (data) {
            console.log(data);
            $.each(data, function (index, item) {
                var option = "<option value='" + item.id + "'>" + item.dispatching + "</option>";
                $("#disPath").append(option);
            })
        })
    }
    //绑定仓库
    function GetStorageList() {
        $.ajax({
            url: "http://localhost:52645/api/OStorageManage/GetStorageList",
            type: "get",
        }).done(function (data) {
            console.log(data);
            $.each(data, function (index, item) {
                var option = "<option value='" + item.id + "'>" + item.storageName + "</option>";
                $("#oStorage").append(option);
            })
        })
    }
    //显示
    function Show() {
        var obj = {
            "pageIndex": pageIndex,
            "pageSize": pageSize,
            "disPath": $("#disPath").val(),
            "oTime": $("#time").val(),
            "Sid": $("#oStorage").val(),
            "orderNo": $("#order").val()
        }
        $.ajax({
            url: "http://localhost:52645/api/OStorageManage/GetOsmList",
            type: "post",
            data: obj,
            accepts: "application/x-www-form-urlencoded",
            contentType: "application/x-www-form-urlencoded"
        }).done(function (data) {
            console.log(data);
            $("#tb").empty();
            $.each(data.list, function (index, item) {
                var tr = "<tr>" +
                    "<td><input type='checkbox' class='ck' /></td>" +
                    "<td>" + item.outTime + "</td>" +
                    "<td>" + item.orderNo + "</td>" +
                    "<td>" + item.dispatching + "</td>" +
                    "<td>" + item.consignee + "</td>" +
                    "<td>" + item.cPhoneNum + "</td>" +
                    "<td>" + item.dispatchingArea + "</td>" +
                    "<td>" + item.storageName + "</td>" +
                    "<td>" + item.storageMan + "</td>" +
                    "<td>" + item.dbMan + "</td>";
                if (item.outState == 1) {
                    tr += "<td></td>";
                }
                else {
                    tr += "<td><button style='margin-left:40px; margin - top:30px;background-color:orangered' class='layui-btn' onclick='UpdateState(/" + item.id + "/)'>出库完成确认</button></td>";
                }
                  tr+= "</tr>";
                $("#tb").append(tr);
            })
            pageCount = data.rowCount;
            pageCount = Math.ceil(pageCount / pageSize);
        })
    }
    //首页
    function First() {
        pageIndex = 1;
        Show();
    }
    //上一页
    function Pre() {
        if (pageIndex == 1) {
            alert("已经是第一页了");
            return;
        }
        pageIndex = pageIndex - 1;
        Show();
    }
    //下一页
    function Next() {
        if (pageIndex == pageCount) {
            alert("已经是最后一页了");
            return;
        }
        pageIndex = pageIndex + 1;
        Show();
    }
    //尾页
    function Last() {
        pageIndex = pageCount;
        Show();
    }

    //出库确认
    function UpdateState(oId) {
        if (confirm("是否确认?")) {
            $.ajax({
                url: "http://localhost:52645/api/OStorageManage/UpdateState?oId=" + oId,
                type: "get",
            }).done(function (data) {
                if (data > 0) {
                    alert("确认成功!");
                    Show();
                }
                else {
                    alert("确认失败!");
                }
            })
        }
    }

    //搜索
    function Look() {
        Show();
    }
    //全选反选
    $("#ckALL").click(function () {
        $(".ck").prop("checked", $("#ckALL").prop("checked"))
    })
</script>